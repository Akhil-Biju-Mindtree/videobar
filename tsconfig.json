{
  "compileOnSave": false,
  "compilerOptions": {
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "module": "esnext",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "@core/*": [
        "app/core/*"
      ],
      "@environment/*": [
        "environments/*"
      ],
      "@shared/*": [
        "app/shared/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@camera-view/*": [
        "camera-view/*"
      ],
      "@providers/*": [
        "app/providers/*"
      ],
    }
  },
  "include": [
    "electron/main.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}